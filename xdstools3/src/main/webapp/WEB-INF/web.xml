<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Document Sharing Toolkit</display-name>



    <!-- ============== Jersey import for REST ============== -->
    <servlet>
        <servlet-name>jersey</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>gov.nist.toolkit.xdstools3</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>



    <!-- ============== Application servlet classes ============== -->
    <servlet>
        <servlet-name>preConnectathonTabServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.xdstools3.server.RPCServices.PreConnectathonTabServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.xdstools3.server.RPCServices.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>toolbarServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.xdstools3.server.RPCServices.ToolbarServiceImpl</servlet-class>
    </servlet>


    <!-- ============== Servlet mappings ============== -->
    <servlet-mapping>
        <servlet-name>jersey</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>preConnectathonTabServlet</servlet-name>
        <url-pattern>/xdstools3/preconnectathon-tab</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/xdstools3/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>toolbarServlet</servlet-name>
        <url-pattern>/xdstools3/toolbar</url-pattern>
    </servlet-mapping>


    <!-- ============== Default page to serve ============== -->
    <welcome-file-list>
        <welcome-file>Xdstools3.html</welcome-file>
    </welcome-file-list>

</web-app>


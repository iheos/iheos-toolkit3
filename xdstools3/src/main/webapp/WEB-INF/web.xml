<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Document Sharing Toolkit</display-name>

    <!-- ============== Toolkit initialization ============== -->

    <servlet>
        <servlet-name>Initialization</servlet-name>
        <servlet-class>gov.nist.hit.ds.tkInitialization.InitializationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Initialization</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>


    <!-- ============== Jersey import for REST ============== -->
    <servlet>
        <servlet-name>jersey</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>gov.nist.toolkit.xdstools3;gov.nist.hit.ds.simServlet.rest</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <!-- ============== Application servlet classes ============== -->
    <servlet>
        <servlet-name>mhdTabsServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.MHDServicesImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>preConnectathonTabServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.PreConnectathonTabServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>toolbarServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.ToolbarServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fileUploadServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testDataSubmissionServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.TestDataSubmissionServicesImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>repositoryServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.repository.rpc.search.server.RepositoryServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>downloadAssetServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.repository.rpc.search.DownloadAssetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminSettingsServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.AdminSettingsImpl</servlet-class>
    </servlet>


    <!-- ============== Servlet mappings ============== -->
    <servlet-mapping>
        <servlet-name>jersey</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>preConnectathonTabServlet</servlet-name>
        <url-pattern>/xdstools3/preconnectathon-tab</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>mhdTabsServlet</servlet-name>
        <url-pattern>/xdstools3/mhd-tabs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>testDataSubmissionServlet</servlet-name>
        <url-pattern>/xdstools3/test-data-submission</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/xdstools3/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>toolbarServlet</servlet-name>
        <url-pattern>/xdstools3/toolbar</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>fileUploadServlet</servlet-name>
        <url-pattern>/fileUploadServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>adminSettingsServlet</servlet-name>
        <url-pattern>/xdstools3/adminSettings</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>repositoryServlet</servlet-name>
        <url-pattern>/xdstools3/repository</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadAssetServlet</servlet-name>
        <url-pattern>/repository/downloadAsset</url-pattern>
    </servlet-mapping>



    <!-- ============== Default page to serve ============== -->
    <welcome-file-list>
        <welcome-file>Xdstools3.html</welcome-file>
    </welcome-file-list>

    <!-- ============== Listeners ========================== -->
    <listener>
        <listener-class>gov.nist.hit.ds.repository.simple.index.db.DbAppCtxListener</listener-class>
    </listener>

</web-app>


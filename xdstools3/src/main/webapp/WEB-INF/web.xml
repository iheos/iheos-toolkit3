    <!--  The filter is necessary so the simulator response headers can be captured for the message log -->
    <filter>
        <filter-name>response-header-log</filter-name>
        <filter-class>gov.nist.toolkit.simulators.servlet.SimServletFilter</filter-class>
    </filter>

    <filter>
        <filter-name>response-header-log2</filter-name>
        <filter-class>gov.nist.toolkit.simulators.servlet.SimServletFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>response-header-log</filter-name>
        <url-pattern>/sim/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>response-header-log2</filter-name>
        <url-pattern>/xdstools2/sim/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>gov.nist.toolkit.xdstools2.server.SessionListener</listener-class>
    </listener>

    <listener>
        <listener-class>gov.nist.toolkit.xdstools2.server.MyServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>toolkitServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.xdstools2.server.ToolkitServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>pidAllocateServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.xdstools2.server.PidAllocateServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.xdstools2.server.upload.UploadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>simulatorServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.simulators.servlet.SimServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>simulatorServlet2</servlet-name>
        <servlet-class>gov.nist.toolkit.simulators.servlet.SimServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>messageServlet</servlet-name>
        <servlet-class>gov.nist.toolkit.simulators.servlet.SimServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>toolkitServlet</servlet-name>
        <url-pattern>/xdstools3/toolkit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>pidAllocateServlet</servlet-name>
        <url-pattern>/xdstools3/pidAllocate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>uploadServlet</servlet-name>
        <url-pattern>/xdstools3/upload</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>messageServlet</servlet-name>
        <url-pattern>/xdstools3/message/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>messageServlet</servlet-name>
        <url-pattern>/message/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>simulatorServlet</servlet-name>
        <url-pattern>/sim/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>simulatorServlet</servlet-name>
        <url-pattern>/xdstools3/sim/*</url-pattern>
    </servlet-mapping>



    <!-- v2 end ========================= -->

    <!-- ============== Servlet mappings ============== -->
    <servlet-mapping>
        <servlet-name>jersey</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>preConnectathonTabServlet</servlet-name>
        <url-pattern>/xdstools3/preconnectathon-tab</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>mhdTabsServlet</servlet-name>
        <url-pattern>/xdstools3/mhd-tabs</url-pattern>
    </servlet-mapping>

    <!--<servlet-mapping>-->
        <!--<servlet-name>findDocumentTabServlet</servlet-name>-->
        <!--<url-pattern>/xdstools3/finddocument-tab</url-pattern>-->
    <!--</servlet-mapping>-->

    <servlet-mapping>
        <servlet-name>testDataSubmissionServlet</servlet-name>
        <url-pattern>/xdstools3/test-data-submission</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/xdstools3/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>toolbarServlet</servlet-name>
        <url-pattern>/xdstools3/toolbar</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>fileUploadServlet</servlet-name>
        <url-pattern>/fileUploadServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>adminSettingsServlet</servlet-name>
        <url-pattern>/xdstools3/adminSettings</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>repositoryServlet</servlet-name>
        <url-pattern>/xdstools3/repository</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadAssetServlet</servlet-name>
        <url-pattern>/repository/downloadAsset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>endpointServlet</servlet-name>
        <url-pattern>/xdstools3/sites</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testStatusServlet</servlet-name>
        <url-pattern>/xdstools3/testStatus</url-pattern>
    </servlet-mapping>



    <!-- ============== Default page to serve ============== -->
    <welcome-file-list>
        <welcome-file>Xdstools3.html</welcome-file>
    </welcome-file-list>

    <!-- ============== Listeners ========================== -->
    <listener>
        <listener-class>gov.nist.hit.ds.repository.simple.index.db.DbAppCtxListener</listener-class>
    </listener>

</web-app>


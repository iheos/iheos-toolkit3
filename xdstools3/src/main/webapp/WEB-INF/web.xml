<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Document Sharing Toolkit</display-name>

    <!-- ============== Toolkit initialization ============== -->

    <servlet>
        <servlet-name>Initialization</servlet-name>
        <servlet-class>gov.nist.hit.ds.tkInitialization.InitializationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Initialization</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>


    <!-- ============== Jersey import for REST ============== -->
    <servlet>
        <servlet-name>jersey</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>gov.nist.hit.ds.xdstools3;gov.nist.hit.ds.simServlet.rest</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <!-- ============== Application servlet classes ============== -->
    <servlet>
        <servlet-name>mhdTabsServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.MHDServicesImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>preConnectathonTabServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.PreConnectathonTabServiceImpl</servlet-class>
    </servlet>
    <!--<servlet>-->
        <!--<servlet-name>findDocumentTabServlet</servlet-name>-->
        <!--<servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.FindDocumentServicesImpl</servlet-class>-->
    <!--</servlet>-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.LoginServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>toolbarServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.ToolbarServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fileUploadServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testDataSubmissionServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.TestDataSubmissionServicesImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>repositoryServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.repository.rpc.search.server.RepositoryServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>downloadAssetServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.repository.rpc.search.DownloadAssetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminSettingsServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.AdminSettingsImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>endpointServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.EndpointImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testStatusServlet</servlet-name>
        <servlet-class>gov.nist.hit.ds.xdstools3.server.RPCServices.TestStatusTabImpl</servlet-class>
    </servlet>



    <!-- v2 begin ======================== -->



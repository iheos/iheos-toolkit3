    <path refid="library.maven:_org.codehaus.woodstox:woodstox-core-asl:4.1.4.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:stax2-api:3.1.1.classpath"/>
    <path refid="library.maven:_xerces:xercesimpl:2.10.0.classpath"/>
    <path refid="library.maven:_xml-apis:xml-apis:1.4.01.classpath"/>
    <path refid="common-datatypes.runtime.module.classpath"/>
    <path refid="xds-exceptions.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tk">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tk">
    <patternset refid="excluded.from.module.tk"/>
  </patternset>
  
  <path id="tk.module.sourcepath">
    <dirset dir="${module.tk.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="tk.module.test.sourcepath">
    <dirset dir="${module.tk.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tk" depends="compile.module.tk.production,compile.module.tk.tests" description="Compile module tk"/>
  
  <target name="compile.module.tk.production" depends="register.custom.compilers,compile.module.utilities,compile.module.common-datatypes,compile.module.xds-exceptions" description="Compile module tk; production classes">
    <mkdir dir="${tk.output.dir}"/>
    <javac2 destdir="${tk.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tk}/javac">
      <compilerarg line="${compiler.args.tk}"/>
      <bootclasspath refid="tk.module.bootclasspath"/>
      <classpath refid="tk.module.production.classpath"/>
      <src refid="tk.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tk"/>
    </javac2>
    
    <copy todir="${tk.output.dir}">
      <fileset dir="${module.tk.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tk.tests" depends="register.custom.compilers,compile.module.tk.production" description="compile module tk; test classes" unless="skip.tests">
    <mkdir dir="${tk.testoutput.dir}"/>
    <javac2 destdir="${tk.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tk}/javac">
      <compilerarg line="${compiler.args.tk}"/>
      <bootclasspath refid="tk.module.bootclasspath"/>
      <classpath refid="tk.module.classpath"/>
      <src refid="tk.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.tk"/>
    </javac2>
    
    <copy todir="${tk.testoutput.dir}">
      <fileset dir="${module.tk.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.tk" description="cleanup module">
    <delete dir="${tk.output.dir}"/>
    <delete dir="${tk.testoutput.dir}"/>
  </target>
  
  <property name="gwt.compiler.output.tk" value="${module.tk.basedir}/GWTCompilerOutput_tk"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.tk" description="Run GWT compiler">
    <java fork="true" jvm="${module.jdk.bin.tk}/java" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx256m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.tk}/gwt-dev.jar"/>
        <path refid="tk.module.sourcepath"/>
        <path refid="utilities.module.sourcepath"/>
        <path refid="common-datatypes.module.sourcepath"/>
        <path refid="xds-exceptions.module.sourcepath"/>
        <path refid="tk.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.tk}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.tk" depends="compile.module.tk" description="Compile all GWT modules in module tk">
    <antcall target="run.gwt.compiler.tk">
      <param name="gwt.module.name" value="gov.nist.toolkit.tk.tk"/>
    </antcall>
  </target>
</project>
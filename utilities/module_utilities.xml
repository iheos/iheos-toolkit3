<?xml version="1.0" encoding="UTF-8"?>
<project name="module_utilities" default="compile.module.utilities">
  <dirname property="module.utilities.basedir" file="${ant.file.module_utilities}"/>
  
  <property name="module.jdk.home.utilities" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.utilities" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.utilities" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.utilities" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="utilities.output.dir" value="${module.utilities.basedir}/target/classes"/>
  <property name="utilities.testoutput.dir" value="${module.utilities.basedir}/target/test-classes"/>
  
  <path id="utilities.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="utilities.module.production.classpath">
    <path refid="${module.jdk.classpath.utilities}"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-impl:1.2.14.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:woodstox-core-asl:4.1.4.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:stax2-api:3.1.1.classpath"/>
    <path refid="library.maven:_xerces:xercesimpl:2.10.0.classpath"/>
    <path refid="library.maven:_xml-apis:xml-apis:1.4.01.classpath"/>
    <pathelement location="${common-datatypes.output.dir}"/>
    <pathelement location="${xds-exceptions.output.dir}"/>
  </path>
  
  <path id="utilities.runtime.production.module.classpath">
    <pathelement location="${utilities.output.dir}"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-impl:1.2.14.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:woodstox-core-asl:4.1.4.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:stax2-api:3.1.1.classpath"/>
    <path refid="library.maven:_xerces:xercesimpl:2.10.0.classpath"/>
    <path refid="library.maven:_xml-apis:xml-apis:1.4.01.classpath"/>
    <path refid="common-datatypes.runtime.production.module.classpath"/>
    <path refid="xds-exceptions.runtime.production.module.classpath"/>
  </path>
  
  <path id="utilities.module.classpath">
    <path refid="${module.jdk.classpath.utilities}"/>
    <pathelement location="${utilities.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-impl:1.2.14.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:woodstox-core-asl:4.1.4.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:stax2-api:3.1.1.classpath"/>
    <path refid="library.maven:_xerces:xercesimpl:2.10.0.classpath"/>
    <path refid="library.maven:_xml-apis:xml-apis:1.4.01.classpath"/>
    <pathelement location="${common-datatypes.testoutput.dir}"/>
    <pathelement location="${common-datatypes.output.dir}"/>
    <pathelement location="${xds-exceptions.testoutput.dir}"/>
    <pathelement location="${xds-exceptions.output.dir}"/>
  </path>
  
  <path id="utilities.runtime.module.classpath">
    <pathelement location="${utilities.testoutput.dir}"/>
    <pathelement location="${utilities.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-impl:1.2.14.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:woodstox-core-asl:4.1.4.classpath"/>
    <path refid="library.maven:_org.codehaus.woodstox:stax2-api:3.1.1.classpath"/>
    <path refid="library.maven:_xerces:xercesimpl:2.10.0.classpath"/>
    <path refid="library.maven:_xml-apis:xml-apis:1.4.01.classpath"/>
    <path refid="common-datatypes.runtime.module.classpath"/>
    <path refid="xds-exceptions.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.utilities">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.utilities">
    <patternset refid="excluded.from.module.utilities"/>
  </patternset>
  
  <path id="utilities.module.sourcepath">
    <dirset dir="${module.utilities.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="utilities.module.test.sourcepath">
    <dirset dir="${module.utilities.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.utilities" depends="compile.module.utilities.production,compile.module.utilities.tests" description="Compile module utilities"/>
  
  <target name="compile.module.utilities.production" depends="register.custom.compilers,compile.module.common-datatypes,compile.module.xds-exceptions" description="Compile module utilities; production classes">
    <mkdir dir="${utilities.output.dir}"/>
    <javac2 destdir="${utilities.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.utilities}/javac">
      <compilerarg line="${compiler.args.utilities}"/>
      <bootclasspath refid="utilities.module.bootclasspath"/>
      <classpath refid="utilities.module.production.classpath"/>
      <src refid="utilities.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.utilities"/>
    </javac2>
    
    <copy todir="${utilities.output.dir}">
      <fileset dir="${module.utilities.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.utilities.tests" depends="register.custom.compilers,compile.module.utilities.production" description="compile module utilities; test classes" unless="skip.tests">
    <mkdir dir="${utilities.testoutput.dir}"/>
    <javac2 destdir="${utilities.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.utilities}/javac">
      <compilerarg line="${compiler.args.utilities}"/>
      <bootclasspath refid="utilities.module.bootclasspath"/>
      <classpath refid="utilities.module.classpath"/>
      <src refid="utilities.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.utilities"/>
    </javac2>
    
    <copy todir="${utilities.testoutput.dir}">
      <fileset dir="${module.utilities.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.utilities" description="cleanup module">
    <delete dir="${utilities.output.dir}"/>
    <delete dir="${utilities.testoutput.dir}"/>
  </target>
</project>
  <patternset id="excluded.from.module.results">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.results">
    <patternset refid="excluded.from.module.results"/>
  </patternset>
  
  <path id="results.module.sourcepath">
    <dirset dir="${module.results.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="results.module.test.sourcepath">
    <dirset dir="${module.results.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.results" depends="compile.module.results.production,compile.module.results.tests" description="Compile module results"/>
  
  <target name="compile.module.results.production" depends="register.custom.compilers,compile.module.actortransaction,compile.module.registry-metadata,compile.module.docref,compile.module.registry-support,compile.module.utilities,compile.module.common-datatypes,compile.module.xds-exceptions" description="Compile module results; production classes">
    <mkdir dir="${results.output.dir}"/>
    <javac2 destdir="${results.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.results}/javac">
      <compilerarg line="${compiler.args.results}"/>
      <bootclasspath refid="results.module.bootclasspath"/>
      <classpath refid="results.module.production.classpath"/>
      <src refid="results.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.results"/>
    </javac2>
    
    <copy todir="${results.output.dir}">
      <fileset dir="${module.results.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.results.tests" depends="register.custom.compilers,compile.module.results.production" description="compile module results; test classes" unless="skip.tests">
    <mkdir dir="${results.testoutput.dir}"/>
    <javac2 destdir="${results.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.results}/javac">
      <compilerarg line="${compiler.args.results}"/>
      <bootclasspath refid="results.module.bootclasspath"/>
      <classpath refid="results.module.classpath"/>
      <src refid="results.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.results"/>
    </javac2>
    
    <copy todir="${results.testoutput.dir}">
      <fileset dir="${module.results.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.results" description="cleanup module">
    <delete dir="${results.output.dir}"/>
    <delete dir="${results.testoutput.dir}"/>
  </target>
  
  <property name="gwt.compiler.output.results" value="${module.results.basedir}/GWTCompilerOutput_results"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.results" description="Run GWT compiler">
    <java fork="true" jvm="${module.jdk.bin.results}/java" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx256m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.results}/gwt-dev.jar"/>
        <path refid="results.module.sourcepath"/>
        <path refid="actortransaction.module.sourcepath"/>
        <path refid="registry-metadata.module.sourcepath"/>
        <path refid="docref.module.sourcepath"/>
        <path refid="registry-support.module.sourcepath"/>
        <path refid="utilities.module.sourcepath"/>
        <path refid="common-datatypes.module.sourcepath"/>
        <path refid="xds-exceptions.module.sourcepath"/>
        <path refid="results.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.results}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.results" depends="compile.module.results" description="Compile all GWT modules in module results">
    <antcall target="run.gwt.compiler.results">
      <param name="gwt.module.name" value="gov.nist.toolkit.results.results"/>
    </antcall>
  </target>
</project>
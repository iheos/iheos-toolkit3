<?xml version="1.0" encoding="UTF-8"?>
<project name="module_docref" default="compile.module.docref">
  <dirname property="module.docref.basedir" file="${ant.file.module_docref}"/>
  
  <property name="module.jdk.home.docref" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.docref" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.docref" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.docref" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="docref.output.dir" value="${module.docref.basedir}/target/classes"/>
  <property name="docref.testoutput.dir" value="${module.docref.basedir}/target/test-classes"/>
  
  <path id="docref.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="docref.module.production.classpath">
    <path refid="${module.jdk.classpath.docref}"/>
  </path>
  
  <path id="docref.runtime.production.module.classpath">
    <pathelement location="${docref.output.dir}"/>
  </path>
  
  <path id="docref.module.classpath">
    <path refid="${module.jdk.classpath.docref}"/>
    <pathelement location="${docref.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
  </path>
  
  <path id="docref.runtime.module.classpath">
    <pathelement location="${docref.testoutput.dir}"/>
    <pathelement location="${docref.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.docref">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.docref">
    <patternset refid="excluded.from.module.docref"/>
  </patternset>
  
  <path id="docref.module.sourcepath">
    <dirset dir="${module.docref.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="docref.module.test.sourcepath">
    <dirset dir="${module.docref.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.docref" depends="compile.module.docref.production,compile.module.docref.tests" description="Compile module docref"/>
  
  <target name="compile.module.docref.production" depends="register.custom.compilers" description="Compile module docref; production classes">
    <mkdir dir="${docref.output.dir}"/>
    <javac2 destdir="${docref.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.docref}/javac">
      <compilerarg line="${compiler.args.docref}"/>
      <bootclasspath refid="docref.module.bootclasspath"/>
      <classpath refid="docref.module.production.classpath"/>
      <src refid="docref.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.docref"/>
    </javac2>
    
    <copy todir="${docref.output.dir}">
      <fileset dir="${module.docref.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.docref.tests" depends="register.custom.compilers,compile.module.docref.production" description="compile module docref; test classes" unless="skip.tests">
    <mkdir dir="${docref.testoutput.dir}"/>
    <javac2 destdir="${docref.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.docref}/javac">
      <compilerarg line="${compiler.args.docref}"/>
      <bootclasspath refid="docref.module.bootclasspath"/>
      <classpath refid="docref.module.classpath"/>
      <src refid="docref.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.docref"/>
    </javac2>
    
    <copy todir="${docref.testoutput.dir}">
      <fileset dir="${module.docref.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.docref" description="cleanup module">
    <delete dir="${docref.output.dir}"/>
    <delete dir="${docref.testoutput.dir}"/>
  </target>
</project>
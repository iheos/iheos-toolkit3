  <patternset id="excluded.from.compilation.dsig">
    <patternset refid="excluded.from.module.dsig"/>
  </patternset>
  
  <path id="dsig.module.sourcepath">
    <dirset dir="${module.dsig.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="dsig.module.test.sourcepath">
    <dirset dir="${module.dsig.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dsig" depends="compile.module.dsig.production,compile.module.dsig.tests" description="Compile module dsig"/>
  
  <target name="compile.module.dsig.production" depends="register.custom.compilers,compile.module.security-common,compile.module.xds-exceptions,compile.module.utilities,compile.module.common-datatypes" description="Compile module dsig; production classes">
    <mkdir dir="${dsig.output.dir}"/>
    <javac2 destdir="${dsig.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dsig}/javac">
      <compilerarg line="${compiler.args.dsig}"/>
      <bootclasspath refid="dsig.module.bootclasspath"/>
      <classpath refid="dsig.module.production.classpath"/>
      <src refid="dsig.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dsig"/>
    </javac2>
    
    <copy todir="${dsig.output.dir}">
      <fileset dir="${module.dsig.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dsig.tests" depends="register.custom.compilers,compile.module.dsig.production" description="compile module dsig; test classes" unless="skip.tests">
    <mkdir dir="${dsig.testoutput.dir}"/>
    <javac2 destdir="${dsig.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dsig}/javac">
      <compilerarg line="${compiler.args.dsig}"/>
      <bootclasspath refid="dsig.module.bootclasspath"/>
      <classpath refid="dsig.module.classpath"/>
      <src refid="dsig.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.dsig"/>
    </javac2>
    
    <copy todir="${dsig.testoutput.dir}">
      <fileset dir="${module.dsig.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.dsig" description="cleanup module">
    <delete dir="${dsig.output.dir}"/>
    <delete dir="${dsig.testoutput.dir}"/>
  </target>

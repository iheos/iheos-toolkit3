<?xml version="1.0" encoding="UTF-8"?>
<project name="module_direct-support" default="compile.module.direct-support">
  <dirname property="module.direct-support.basedir" file="${ant.file.module_direct-support}"/>
  
  <property name="module.jdk.home.direct-support" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.direct-support" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.direct-support" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.direct-support" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="direct-support.output.dir" value="${module.direct-support.basedir}/target/classes"/>
  <property name="direct-support.testoutput.dir" value="${module.direct-support.basedir}/target/test-classes"/>
  
  <path id="direct-support.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="direct-support.module.production.classpath">
    <path refid="${module.jdk.classpath.direct-support}"/>
  </path>
  
  <path id="direct-support.runtime.production.module.classpath">
    <pathelement location="${direct-support.output.dir}"/>
  </path>
  
  <path id="direct-support.module.classpath">
    <path refid="${module.jdk.classpath.direct-support}"/>
    <pathelement location="${direct-support.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="direct-support.runtime.module.classpath">
    <pathelement location="${direct-support.testoutput.dir}"/>
    <pathelement location="${direct-support.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.direct-support">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.direct-support">
    <patternset refid="excluded.from.module.direct-support"/>
  </patternset>
  
  <path id="direct-support.module.sourcepath">
    <dirset dir="${module.direct-support.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="direct-support.module.test.sourcepath">
    <dirset dir="${module.direct-support.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.direct-support" depends="compile.module.direct-support.production,compile.module.direct-support.tests" description="Compile module direct-support"/>
  
  <target name="compile.module.direct-support.production" depends="register.custom.compilers" description="Compile module direct-support; production classes">
    <mkdir dir="${direct-support.output.dir}"/>
    <javac2 destdir="${direct-support.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.direct-support}/javac">
      <compilerarg line="${compiler.args.direct-support}"/>
      <bootclasspath refid="direct-support.module.bootclasspath"/>
      <classpath refid="direct-support.module.production.classpath"/>
      <src refid="direct-support.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.direct-support"/>
    </javac2>
    
    <copy todir="${direct-support.output.dir}">
      <fileset dir="${module.direct-support.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.direct-support.tests" depends="register.custom.compilers,compile.module.direct-support.production" description="compile module direct-support; test classes" unless="skip.tests">
    <mkdir dir="${direct-support.testoutput.dir}"/>
    <javac2 destdir="${direct-support.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.direct-support}/javac">
      <compilerarg line="${compiler.args.direct-support}"/>
      <bootclasspath refid="direct-support.module.bootclasspath"/>
      <classpath refid="direct-support.module.classpath"/>
      <src refid="direct-support.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.direct-support"/>
    </javac2>
    
    <copy todir="${direct-support.testoutput.dir}">
      <fileset dir="${module.direct-support.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.direct-support" description="cleanup module">
    <delete dir="${direct-support.output.dir}"/>
    <delete dir="${direct-support.testoutput.dir}"/>
  </target>
</project>
  <target name="compile.module.http" depends="compile.module.http.production,compile.module.http.tests" description="Compile module http"/>
  
  <target name="compile.module.http.production" depends="register.custom.compilers,compile.module.error-recording,compile.module.utilities,compile.module.common-datatypes,compile.module.xds-exceptions" description="Compile module http; production classes">
    <mkdir dir="${http.output.dir}"/>
    <javac2 destdir="${http.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.http}/javac">
      <compilerarg line="${compiler.args.http}"/>
      <bootclasspath refid="http.module.bootclasspath"/>
      <classpath refid="http.module.production.classpath"/>
      <src refid="http.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.http"/>
    </javac2>
    
    <copy todir="${http.output.dir}">
      <fileset dir="${module.http.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.http.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.http.tests" depends="register.custom.compilers,compile.module.http.production" description="compile module http; test classes" unless="skip.tests">
    <mkdir dir="${http.testoutput.dir}"/>
    <javac2 destdir="${http.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.http}/javac">
      <compilerarg line="${compiler.args.http}"/>
      <bootclasspath refid="http.module.bootclasspath"/>
      <classpath refid="http.module.classpath"/>
      <src refid="http.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.http"/>
    </javac2>
    
    <copy todir="${http.testoutput.dir}">
      <fileset dir="${module.http.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.http" description="cleanup module">
    <delete dir="${http.output.dir}"/>
    <delete dir="${http.testoutput.dir}"/>
  </target>
  
  <property name="gwt.compiler.output.http" value="${module.http.basedir}/GWTCompilerOutput_http"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.http" description="Run GWT compiler">
    <java fork="true" jvm="${module.jdk.bin.http}/java" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx256m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.http}/gwt-dev.jar"/>
        <path refid="http.module.sourcepath"/>
        <path refid="error-recording.module.sourcepath"/>
        <path refid="utilities.module.sourcepath"/>
        <path refid="common-datatypes.module.sourcepath"/>
        <path refid="xds-exceptions.module.sourcepath"/>
        <path refid="http.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.http}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.http" depends="compile.module.http" description="Compile all GWT modules in module http">
    <antcall target="run.gwt.compiler.http">
      <param name="gwt.module.name" value="gov.nist.toolkit.http.http"/>
    </antcall>
  </target>

<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sim-common" default="compile.module.sim-common">
  <dirname property="module.sim-common.basedir" file="${ant.file.module_sim-common}"/>
  
  <property name="module.jdk.home.sim-common" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sim-common" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sim-common" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sim-common" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="sim-common.output.dir" value="${module.sim-common.basedir}/target/classes"/>
  <property name="sim-common.testoutput.dir" value="${module.sim-common.basedir}/target/test-classes"/>
  
  <path id="sim-common.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sim-common.module.production.classpath">
    <path refid="${module.jdk.classpath.sim-common}"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
    <path refid="library.maven:_com.google.gwt:gwt-user:2.5.1.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:1.0.0.ga.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:sources:1.0.0.ga.classpath"/>
    <path refid="library.maven:_org.json:json:20090211.classpath"/>
    <pathelement location="${actortransaction.output.dir}"/>
  </path>
  
  <path id="sim-common.runtime.production.module.classpath">
    <pathelement location="${sim-common.output.dir}"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
    <path refid="actortransaction.runtime.production.module.classpath"/>
  </path>
  
  <path id="sim-common.module.classpath">
    <path refid="${module.jdk.classpath.sim-common}"/>
    <pathelement location="${sim-common.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
    <path refid="library.maven:_com.google.gwt:gwt-user:2.5.1.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:1.0.0.ga.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:sources:1.0.0.ga.classpath"/>
    <path refid="library.maven:_org.json:json:20090211.classpath"/>
    <pathelement location="${actortransaction.testoutput.dir}"/>
    <pathelement location="${actortransaction.output.dir}"/>
  </path>
  
  <path id="sim-common.runtime.module.classpath">
    <pathelement location="${sim-common.testoutput.dir}"/>
    <pathelement location="${sim-common.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.17.classpath"/>
    <path refid="library.maven:_com.google.gwt:gwt-user:2.5.1.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:1.0.0.ga.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:sources:1.0.0.ga.classpath"/>
    <path refid="library.maven:_org.json:json:20090211.classpath"/>
    <path refid="actortransaction.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sim-common">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sim-common">
    <patternset refid="excluded.from.module.sim-common"/>
  </patternset>
  
  <path id="sim-common.module.sourcepath">
    <dirset dir="${module.sim-common.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="sim-common.module.test.sourcepath">
    <dirset dir="${module.sim-common.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sim-common" depends="compile.module.sim-common.production,compile.module.sim-common.tests" description="Compile module sim-common"/>
  
  <target name="compile.module.sim-common.production" depends="register.custom.compilers,compile.module.actortransaction" description="Compile module sim-common; production classes">
    <mkdir dir="${sim-common.output.dir}"/>
    <javac2 destdir="${sim-common.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sim-common}/javac">
      <compilerarg line="${compiler.args.sim-common}"/>
      <bootclasspath refid="sim-common.module.bootclasspath"/>
      <classpath refid="sim-common.module.production.classpath"/>
      <src refid="sim-common.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sim-common"/>
    </javac2>
    
    <copy todir="${sim-common.output.dir}">
      <fileset dir="${module.sim-common.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sim-common.tests" depends="register.custom.compilers,compile.module.sim-common.production" description="compile module sim-common; test classes" unless="skip.tests">
    <mkdir dir="${sim-common.testoutput.dir}"/>
    <javac2 destdir="${sim-common.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sim-common}/javac">
      <compilerarg line="${compiler.args.sim-common}"/>
      <bootclasspath refid="sim-common.module.bootclasspath"/>
      <classpath refid="sim-common.module.classpath"/>
      <src refid="sim-common.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.sim-common"/>
    </javac2>
    
    <copy todir="${sim-common.testoutput.dir}">
      <fileset dir="${module.sim-common.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.sim-common" description="cleanup module">
    <delete dir="${sim-common.output.dir}"/>
    <delete dir="${sim-common.testoutput.dir}"/>
  </target>
  
  <property name="gwt.compiler.output.sim-common" value="${module.sim-common.basedir}/GWTCompilerOutput_sim-common"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.sim-common" description="Run GWT compiler">
    <java fork="true" jvm="${module.jdk.bin.sim-common}/java" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx256m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.sim-common}/gwt-dev.jar"/>
        <path refid="sim-common.module.sourcepath"/>
        <path refid="actortransaction.module.sourcepath"/>
        <path refid="sim-common.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.sim-common}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.sim-common" depends="compile.module.sim-common" description="Compile all GWT modules in module sim-common">
    <antcall target="run.gwt.compiler.sim-common">
      <param name="gwt.module.name" value="gov.nist.toolkit.simcommon.simCommon"/>
    </antcall>
  </target>
</project>
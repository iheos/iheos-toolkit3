<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>
    <display-name>ToolkitConsole</display-name>
    <servlet-name>TkRunTask</servlet-name>
    <servlet-class>gov.nist.hit.tkConsole.TkRunTaskServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TkRunTask</servlet-name>
    <url-pattern>/tkRunTask</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>demo.html</welcome-file>
  </welcome-file-list>

</web-app>
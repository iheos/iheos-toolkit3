<?xml version="1.0" encoding="UTF-8"?>
<project name="module_soapclientapi" default="compile.module.soapclientapi">
  <dirname property="module.soapclientapi.basedir" file="${ant.file.module_soapclientapi}"/>
  
  <property name="module.jdk.home.soapclientapi" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.soapclientapi" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.soapclientapi" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.soapclientapi" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="soapclientapi.output.dir" value="${module.soapclientapi.basedir}/target/classes"/>
  <property name="soapclientapi.testoutput.dir" value="${module.soapclientapi.basedir}/target/test-classes"/>
  
  <path id="soapclientapi.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="soapclientapi.module.production.classpath">
    <path refid="${module.jdk.classpath.soapclientapi}"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="soapclientapi.runtime.production.module.classpath">
    <pathelement location="${soapclientapi.output.dir}"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="soapclientapi.module.classpath">
    <path refid="${module.jdk.classpath.soapclientapi}"/>
    <pathelement location="${soapclientapi.output.dir}"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="soapclientapi.runtime.module.classpath">
    <pathelement location="${soapclientapi.testoutput.dir}"/>
    <pathelement location="${soapclientapi.output.dir}"/>
    <path refid="library.maven:_org.apache.ws.commons.axiom:axiom-api:1.2.14.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-activation_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-javamail_1.4_spec:1.7.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_jaxen:jaxen:1.1.4.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-stax-api_1.0_spec:1.0.1.classpath"/>
    <path refid="library.maven:_org.apache.james:apache-mime4j-core:0.7.2.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.soapclientapi">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.soapclientapi">
    <patternset refid="excluded.from.module.soapclientapi"/>
  </patternset>
  
  <path id="soapclientapi.module.sourcepath">
    <dirset dir="${module.soapclientapi.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.soapclientapi" depends="compile.module.soapclientapi.production,compile.module.soapclientapi.tests" description="Compile module soapClientAPI"/>
  
  <target name="compile.module.soapclientapi.production" depends="register.custom.compilers" description="Compile module soapClientAPI; production classes">
    <mkdir dir="${soapclientapi.output.dir}"/>
    <javac2 destdir="${soapclientapi.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.soapclientapi}/javac">
      <compilerarg line="${compiler.args.soapclientapi}"/>
      <bootclasspath refid="soapclientapi.module.bootclasspath"/>
      <classpath refid="soapclientapi.module.production.classpath"/>
      <src refid="soapclientapi.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.soapclientapi"/>
    </javac2>
    
    <copy todir="${soapclientapi.output.dir}">
      <fileset dir="${module.soapclientapi.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.soapclientapi.tests" depends="register.custom.compilers,compile.module.soapclientapi.production" description="compile module soapClientAPI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.soapclientapi" description="cleanup module">
    <delete dir="${soapclientapi.output.dir}"/>
    <delete dir="${soapclientapi.testoutput.dir}"/>
  </target>
</project>
    <javac2 destdir="${validators-support.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.validators-support}/javac">
      <compilerarg line="${compiler.args.validators-support}"/>
      <bootclasspath refid="validators-support.module.bootclasspath"/>
      <classpath refid="validators-support.module.production.classpath"/>
      <src refid="validators-support.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.validators-support"/>
    </javac2>
    
    <copy todir="${validators-support.output.dir}">
      <fileset dir="${module.validators-support.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  

  <property name="gwt.compiler.output.validators-support" value="${module.validators-support.basedir}/GWTCompilerOutput_validators-support"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.validators-support" description="Run GWT compiler">
    <java fork="true" jvm="${module.jdk.bin.validators-support}/java" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx256m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.validators-support}/gwt-dev.jar"/>
        <path refid="validators-support.module.sourcepath"/>
        <path refid="common-datatypes.module.sourcepath"/>
        <path refid="error-recording.module.sourcepath"/>
        <path refid="registry-metadata.module.sourcepath"/>
        <path refid="docref.module.sourcepath"/>
        <path refid="registry-support.module.sourcepath"/>
        <path refid="utilities.module.sourcepath"/>
        <path refid="xds-exceptions.module.sourcepath"/>
        <path refid="validators-support.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.validators-support}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.validators-support" depends="compile.module.validators-support" description="Compile all GWT modules in module validators-support">
    <antcall target="run.gwt.compiler.validators-support">
      <param name="gwt.module.name" value="gov.nist.toolkit.valsupport.validatorsSupport"/>
    </antcall>
  </target>

<?xml version="1.0" encoding="UTF-8"?>
<project name="module_xds-exceptions" default="compile.module.xds-exceptions">
  <dirname property="module.xds-exceptions.basedir" file="${ant.file.module_xds-exceptions}"/>
  
  <property name="module.jdk.home.xds-exceptions" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.xds-exceptions" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.xds-exceptions" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.xds-exceptions" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="xds-exceptions.output.dir" value="${module.xds-exceptions.basedir}/target/classes"/>
  <property name="xds-exceptions.testoutput.dir" value="${module.xds-exceptions.basedir}/target/test-classes"/>
  
  <path id="xds-exceptions.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="xds-exceptions.module.production.classpath">
    <path refid="${module.jdk.classpath.xds-exceptions}"/>
    <path refid="library.maven:_com.google.gwt:gwt-user:2.5.1.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:1.0.0.ga.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:sources:1.0.0.ga.classpath"/>
    <path refid="library.maven:_org.json:json:20090211.classpath"/>
  </path>
  
  <path id="xds-exceptions.runtime.production.module.classpath">
    <pathelement location="${xds-exceptions.output.dir}"/>
  </path>
  
  <path id="xds-exceptions.module.classpath">
    <path refid="${module.jdk.classpath.xds-exceptions}"/>
    <pathelement location="${xds-exceptions.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
    <path refid="library.maven:_com.google.gwt:gwt-user:2.5.1.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:1.0.0.ga.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:sources:1.0.0.ga.classpath"/>
    <path refid="library.maven:_org.json:json:20090211.classpath"/>
  </path>
  
  <path id="xds-exceptions.runtime.module.classpath">
    <pathelement location="${xds-exceptions.testoutput.dir}"/>
    <pathelement location="${xds-exceptions.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
    <path refid="library.maven:_com.google.gwt:gwt-user:2.5.1.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:1.0.0.ga.classpath"/>
    <path refid="library.maven:_javax.validation:validation-api:sources:1.0.0.ga.classpath"/>
    <path refid="library.maven:_org.json:json:20090211.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.xds-exceptions">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.xds-exceptions">
    <patternset refid="excluded.from.module.xds-exceptions"/>
  </patternset>
  
  <path id="xds-exceptions.module.sourcepath">
    <dirset dir="${module.xds-exceptions.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="xds-exceptions.module.test.sourcepath">
    <dirset dir="${module.xds-exceptions.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.xds-exceptions" depends="compile.module.xds-exceptions.production,compile.module.xds-exceptions.tests" description="Compile module xds-exceptions"/>
  
  <target name="compile.module.xds-exceptions.production" depends="register.custom.compilers" description="Compile module xds-exceptions; production classes">
    <mkdir dir="${xds-exceptions.output.dir}"/>
    <javac2 destdir="${xds-exceptions.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.xds-exceptions}/javac">
      <compilerarg line="${compiler.args.xds-exceptions}"/>
      <bootclasspath refid="xds-exceptions.module.bootclasspath"/>
      <classpath refid="xds-exceptions.module.production.classpath"/>
      <src refid="xds-exceptions.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.xds-exceptions"/>
    </javac2>
    
    <copy todir="${xds-exceptions.output.dir}">
      <fileset dir="${module.xds-exceptions.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.xds-exceptions.tests" depends="register.custom.compilers,compile.module.xds-exceptions.production" description="compile module xds-exceptions; test classes" unless="skip.tests">
    <mkdir dir="${xds-exceptions.testoutput.dir}"/>
    <javac2 destdir="${xds-exceptions.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.xds-exceptions}/javac">
      <compilerarg line="${compiler.args.xds-exceptions}"/>
      <bootclasspath refid="xds-exceptions.module.bootclasspath"/>
      <classpath refid="xds-exceptions.module.classpath"/>
      <src refid="xds-exceptions.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.xds-exceptions"/>
    </javac2>
    
    <copy todir="${xds-exceptions.testoutput.dir}">
      <fileset dir="${module.xds-exceptions.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.xds-exceptions" description="cleanup module">
    <delete dir="${xds-exceptions.output.dir}"/>
    <delete dir="${xds-exceptions.testoutput.dir}"/>
  </target>
</project>
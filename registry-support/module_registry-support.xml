  <patternset id="excluded.from.module.registry-support">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.registry-support">
    <patternset refid="excluded.from.module.registry-support"/>
  </patternset>
  
  <path id="registry-support.module.sourcepath">
    <dirset dir="${module.registry-support.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="registry-support.module.test.sourcepath">
    <dirset dir="${module.registry-support.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.registry-support" depends="compile.module.registry-support.production,compile.module.registry-support.tests" description="Compile module registry-support"/>
  
  <target name="compile.module.registry-support.production" depends="register.custom.compilers,compile.module.utilities,compile.module.common-datatypes,compile.module.xds-exceptions" description="Compile module registry-support; production classes">
    <mkdir dir="${registry-support.output.dir}"/>
    <javac2 destdir="${registry-support.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.registry-support}/javac">
      <compilerarg line="${compiler.args.registry-support}"/>
      <bootclasspath refid="registry-support.module.bootclasspath"/>
      <classpath refid="registry-support.module.production.classpath"/>
      <src refid="registry-support.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.registry-support"/>
    </javac2>
    
    <copy todir="${registry-support.output.dir}">
      <fileset dir="${module.registry-support.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.registry-support.tests" depends="register.custom.compilers,compile.module.registry-support.production" description="compile module registry-support; test classes" unless="skip.tests">
    <mkdir dir="${registry-support.testoutput.dir}"/>
    <javac2 destdir="${registry-support.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.registry-support}/javac">
      <compilerarg line="${compiler.args.registry-support}"/>
      <bootclasspath refid="registry-support.module.bootclasspath"/>
      <classpath refid="registry-support.module.classpath"/>
      <src refid="registry-support.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.registry-support"/>
    </javac2>
    
    <copy todir="${registry-support.testoutput.dir}">
      <fileset dir="${module.registry-support.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.registry-support" description="cleanup module">
    <delete dir="${registry-support.output.dir}"/>
    <delete dir="${registry-support.testoutput.dir}"/>
  </target>

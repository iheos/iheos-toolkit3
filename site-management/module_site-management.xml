  <target name="compile.module.site-management" depends="compile.module.site-management.production,compile.module.site-management.tests" description="Compile module site-management"/>
  
  <target name="compile.module.site-management.production" depends="register.custom.compilers,compile.module.actortransaction,compile.module.registry-support,compile.module.utilities,compile.module.common-datatypes,compile.module.xds-exceptions" description="Compile module site-management; production classes">
    <mkdir dir="${site-management.output.dir}"/>
    <groovyc destdir="${site-management.output.dir}" fork="yes">
      <src refid="site-management.module.sourcepath"/>
      <classpath refid="site-management.module.production.classpath"/>
      <patternset refid="excluded.from.compilation.site-management"/>
      <javac debug="${compiler.debug}">
        <compilerarg line="${compiler.args.site-management}"/>
      </javac>
    </groovyc>
    <instrumentIdeaExtensions destdir="${site-management.output.dir}">
      <compilerarg line="${compiler.args.site-management}"/>
      <bootclasspath refid="site-management.module.bootclasspath"/>
      <classpath refid="site-management.module.production.classpath"/>
      <src refid="site-management.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.site-management"/>
    </instrumentIdeaExtensions>
    
    <copy todir="${site-management.output.dir}">
      <fileset dir="${module.site-management.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.site-management.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.site-management.tests" depends="register.custom.compilers,compile.module.site-management.production" description="compile module site-management; test classes" unless="skip.tests">
    <mkdir dir="${site-management.testoutput.dir}"/>

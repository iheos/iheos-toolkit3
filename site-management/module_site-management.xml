        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.site-management" description="cleanup module">
    <delete dir="${site-management.output.dir}"/>
    <delete dir="${site-management.testoutput.dir}"/>
  </target>
  
  <property name="gwt.compiler.output.site-management" value="${module.site-management.basedir}/GWTCompilerOutput_site-management"/>
  
  <!-- Run GWT compiler for GWT module ${gwt.module.name} -->
  <target name="run.gwt.compiler.site-management" description="Run GWT compiler">
    <java fork="true" jvm="${module.jdk.bin.site-management}/java" classname="com.google.gwt.dev.Compiler">
      <jvmarg line="-Xmx256m"/>
      <classpath>
        <pathelement location="${gwt.sdk.home.site-management}/gwt-dev.jar"/>
        <path refid="site-management.module.sourcepath"/>
        <path refid="actortransaction.module.sourcepath"/>
        <path refid="registry-support.module.sourcepath"/>
        <path refid="utilities.module.sourcepath"/>
        <path refid="common-datatypes.module.sourcepath"/>
        <path refid="xds-exceptions.module.sourcepath"/>
        <path refid="site-management.module.classpath"/>
      </classpath>
      <arg value="-logLevel"/>
      <arg value="WARN"/>
      <arg value="-war"/>
      <arg value="${gwt.compiler.output.site-management}"/>
      <arg value="-style"/>
      <arg value="DETAILED"/>
      <arg value="${gwt.module.name}"/>
    </java>
  </target>
  
  <target name="compile.gwt.site-management" depends="compile.module.site-management" description="Compile all GWT modules in module site-management">
    <antcall target="run.gwt.compiler.site-management">
      <param name="gwt.module.name" value="gov.nist.toolkit.sitemanagement.siteManagement"/>
    </antcall>
  </target>

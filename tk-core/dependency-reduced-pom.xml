  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.nist.hit.ds</groupId>
  <artifactId>tk-core</artifactId>
  <version>3.0.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <excludes>
              <exclude>junit:junit</exclude>
              <exclude>log4j*:*</exclude>
              <exclude>commons-logging*:*</exclude>
              <exclude>jaxen*:*</exclude>
              <exclude>xerces:*</exclude>
              <exclude>xml-apis:*</exclude>
              <exclude>soap:soap:*</exclude>
              <exclude>backport-util-concurrent*:*</exclude>
              <exclude>commons-collections*:*</exclude>
              <exclude>commons-lang*:*</exclude>
              <exclude>oro*:*</exclude>
              <exclude>org.hamcrest:*</exclude>
              <exclude>org.codehaus*:*</exclude>
              <exclude>com.sun.ebxml*:*</exclude>
              <exclude>edu.emory*:*</exclude>
              <exclude>javax*:*</exclude>
              <exclude>org.*:*</exclude>
            </excludes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.sun.ebxml</groupId>
      <artifactId>ebxmlrr-common</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>/Users/bmajur/workspace3/te-sim-hg/tk-core/../lib/ebxmlrr-common-1.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>


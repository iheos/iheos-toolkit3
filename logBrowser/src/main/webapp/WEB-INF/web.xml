<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->

	<servlet>
		<servlet-name>repositoryServlet</servlet-name>
		<servlet-class>gov.nist.hit.ds.repository.simple.search.server.RepositoryServiceImpl</servlet-class>
	</servlet>
	<servlet>
  <servlet-name>jUnitHostImpl</servlet-name>
  	<servlet-class>com.google.gwt.junit.server.JUnitHostImpl</servlet-class>
	</servlet>

<!--  mapping -->

	<servlet-mapping>
		<servlet-name>repositoryServlet</servlet-name>
		<url-pattern>/logBrowser/repository</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  <servlet-name>jUnitHostImpl</servlet-name>
	  <url-pattern>/logBrowser/junithost/*</url-pattern>
	</servlet-mapping>
	
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>logBrowser.html</welcome-file>
  </welcome-file-list>

</web-app>
